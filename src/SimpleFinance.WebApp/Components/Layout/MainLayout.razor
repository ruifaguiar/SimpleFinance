@inherits LayoutComponentBase

<div class="bb-page">

    <Sidebar @ref="sidebar"
             IconName="IconName.BootstrapFill"
             Title="Simple Finance"
             DataProvider="SidebarDataProvider" />

    <main>
        <article class="content px-4">
            <div class="py-2">@Body</div>
        </article>
    </main>

</div>

@code {
    Sidebar sidebar;
    IEnumerable<NavItem> navItems;

    private async Task<SidebarDataProviderResult> SidebarDataProvider(SidebarDataProviderRequest request)
    {
        if (navItems is null)
            navItems = GetNavItems();
        return await Task.FromResult(request.ApplyTo(navItems));
    }

    private IEnumerable<NavItem> GetNavItems()
    {
        navItems = new List<NavItem>
        {
            new NavItem { Id = "1", Href = "/home", IconName = IconName.HouseDoorFill, Text = "Home", Match=NavLinkMatch.All},
            new NavItem { Id = "2", IconName = IconName.ExclamationTriangleFill, Text = "Configuration" },
            new NavItem { Id = "3", Href = "/institutions", IconName = IconName.Bank, Text = "Institutions", ParentId = "2"},
            new NavItem { Id = "4", Href = "/account-types", IconName = IconName.ListUl, Text = "Account Types", ParentId = "2"},
            new NavItem { Id = "5", Href = "/accounts", IconName = IconName.Wallet2, Text = "Accounts", ParentId = "2"},
            new NavItem { Id = "6", Href = "/expense-categories", IconName = IconName.Tags, Text = "Expense Categories", ParentId = "2"},
            new NavItem { Id = "7", Href = "/transactions", IconName = IconName.CashCoin, Text = "Transactions", ParentId = "2"},
            new NavItem { Id = "8", Href = "/transaction-types", IconName = IconName.Receipt, Text = "Transaction Types", ParentId = "2"}
        };

        return navItems;
    }
}


<div id="blazor-error-ui">
    An unhandled error has occurred.
    <a href="" class="reload">Reload</a>
    <a class="dismiss">🗙</a>
</div>
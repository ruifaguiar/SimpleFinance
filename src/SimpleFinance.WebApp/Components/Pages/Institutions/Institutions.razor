@page "/institutions"
@rendermode InteractiveServer
@using SimpleFinance.WebApp.Gateway
@using SimpleFinance.WebApp.Model
@inject InstitutionGateway InstitutionGateway

<h3>Institutions</h3>

<div class="mb-3">
    <a href="/AddInstitution" class="btn btn-primary">Add Institution</a>
</div>

@if (_isLoading)
{
    <p>Loading...</p>
}
else if (_errorMessage != null)
{
    <div class="alert alert-danger">@_errorMessage</div>
}
else if (_institutions == null || !_institutions.Any())
{
    <p>No institutions found.</p>
}
else
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var institution in _institutions)
            {
                <tr>
                    <td>@institution.Id</td>
                    <td>@institution.Name</td>
                    <td>
                        <a href="/institutions/@institution.Id/edit" class="btn btn-sm btn-outline-primary">Edit</a>
                        <button class="btn btn-sm btn-outline-danger" @onclick="() => ConfirmDelete(institution)">Delete</button>
                    </td>
                </tr>
            }
        </tbody>
        </table>
}

@if (_showDeleteConfirmation && _institutionToDelete != null)
{
    <div class="modal fade show d-block" tabindex="-1" style="background-color: rgba(0,0,0,0.5);">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Confirm Delete</h5>
                    <button type="button" class="btn-close" @onclick="CancelDelete"></button>
                </div>
                <div class="modal-body">
                    <p>Are you sure you want to delete institution "<strong>@_institutionToDelete.Name</strong>"?</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" @onclick="CancelDelete">Cancel</button>
                    <button type="button" class="btn btn-danger" @onclick="DeleteInstitution">Delete</button>
                </div>
            </div>
        </div>
    </div>
}

@code {
    private IEnumerable<InstitutionModel>? _institutions;
    private bool _isLoading = true;
    private string? _errorMessage;
    private bool _showDeleteConfirmation;
    private InstitutionModel? _institutionToDelete;

    protected override async Task OnInitializedAsync()
    {
        try
        {
            _institutions = await InstitutionGateway.GetAllInstitutionsAsync();
        }
        catch (Exception ex)
        {
            _errorMessage = $"Error loading institutions: {ex.Message}";
        }
        finally
        {
            _isLoading = false;
        }
    }

    private void ConfirmDelete(InstitutionModel institution)
    {
        _institutionToDelete = institution;
        _showDeleteConfirmation = true;
    }

    private void CancelDelete()
    {
        _institutionToDelete = null;
        _showDeleteConfirmation = false;
    }

    private async Task DeleteInstitution()
    {
        if (_institutionToDelete?.Id == null) return;

        try
        {
            var deleted = await InstitutionGateway.DeleteInstitutionAsync(_institutionToDelete.Id.Value);
            if (deleted)
            {
                _institutions = await InstitutionGateway.GetAllInstitutionsAsync();
            }
            else
            {
                _errorMessage = "Institution not found.";
            }
        }
        catch (Exception ex)
        {
            _errorMessage = $"Error deleting institution: {ex.Message}";
        }
        finally
        {
            _institutionToDelete = null;
            _showDeleteConfirmation = false;
        }
    }
}


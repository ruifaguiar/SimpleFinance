@page "/transactions/{Id:int}/edit"
@rendermode InteractiveServer
@using SimpleFinance.WebApp.Gateway
@using SimpleFinance.WebApp.Model
@inject TransactionGateway TransactionGateway
@inject AccountGateway AccountGateway
@inject NavigationManager NavigationManager

<h3>Edit Transaction</h3>

@if (_isLoading)
{
    <p>Loading...</p>
}
else if (_notFound)
{
    <div class="alert alert-warning">Transaction not found.</div>
    <a href="/transactions" class="btn btn-secondary">Back to Transactions</a>
}
else if (Transaction != null)
{
    <EditForm Model="@Transaction" OnValidSubmit="HandleValidSubmit" FormName="EditTransactionForm">
        <DataAnnotationsValidator/>

        <div class="mb-3">
            <label for="account" class="form-label">Account</label>
            <InputSelect id="account" class="form-select" @bind-Value="Transaction.AccountId">
                <option value="0">-- Select Account --</option>
                @foreach (var account in _accounts)
                {
                    <option value="@account.Id">@account.Name (@account.Currency)</option>
                }
            </InputSelect>
            <ValidationMessage For="@(() => Transaction.AccountId)"/>
        </div>

        <div class="mb-3">
            <label for="amount" class="form-label">Amount</label>
            <InputNumber id="amount" class="form-control" @bind-Value="Transaction.Amount" step="0.01"/>
            <ValidationMessage For="@(() => Transaction.Amount)"/>
            <small class="text-muted">Use negative values for expenses/withdrawals and positive for income/deposits.</small>
        </div>

        <div class="mb-3">
            <label for="transactionTypeId" class="form-label">Transaction Type ID</label>
            <InputNumber id="transactionTypeId" class="form-control" @bind-Value="Transaction.TransactionTypeId"/>
            <ValidationMessage For="@(() => Transaction.TransactionTypeId)"/>
        </div>

        <div class="mb-3">
            <label for="transactionDate" class="form-label">Transaction Date</label>
            <InputDate id="transactionDate" class="form-control" @bind-Value="_transactionDate"/>
            <ValidationMessage For="@(() => Transaction.TransactionDate)"/>
        </div>

        <div class="mb-3">
            <label for="description" class="form-label">Description</label>
            <InputTextArea id="description" class="form-control" @bind-Value="Transaction.Description" rows="3"/>
            <ValidationMessage For="@(() => Transaction.Description)"/>
        </div>

        <div class="mb-3">
            <label for="balanceAfter" class="form-label">Balance After Transaction</label>
            <InputNumber id="balanceAfter" class="form-control" @bind-Value="Transaction.BalanceAfterTransaction" readonly="true"/>
            <small class="text-muted">This field is calculated automatically.</small>
        </div>

        <div class="mb-3">
            <label for="currency" class="form-label">Currency</label>
            <InputText id="currency" class="form-control" @bind-Value="Transaction.Currency"/>
            <ValidationMessage For="@(() => Transaction.Currency)"/>
        </div>

        <button type="submit" class="btn btn-primary" disabled="@_isSubmitting">
            @if (_isSubmitting)
            {
                <span class="spinner-border spinner-border-sm" role="status" aria-hidden="true"></span>
                <span>Saving...</span>
            }
            else
            {
                <span>Save Changes</span>
            }
        </button>
        <a href="/transactions" class="btn btn-secondary ms-2">Cancel</a>
    </EditForm>

    @if (!string.IsNullOrEmpty(_errorMessage))
    {
        <div class="alert alert-danger mt-3">@_errorMessage</div>
    }
}

@code {
    [Parameter]
    public int Id { get; set; }

    [SupplyParameterFromForm]
    private TransactionModel? Transaction { get; set; }

    private IEnumerable<AccountModel> _accounts = [];
    private bool _isLoading = true;
    private bool _isSubmitting;
    private bool _notFound;
    private string? _errorMessage;
    private DateOnly _transactionDate = DateOnly.FromDateTime(DateTime.Today);

    protected override async Task OnInitializedAsync()
    {
        try
        {
            var accountsTask = AccountGateway.GetAllAccountsAsync();
            var transactionTask = TransactionGateway.GetTransactionByIdAsync(Id);

            await Task.WhenAll(accountsTask, transactionTask);

            _accounts = await accountsTask;
            var transaction = await transactionTask;

            if (transaction == null)
            {
                _notFound = true;
            }
            else
            {
                Transaction ??= transaction;
                _transactionDate = DateOnly.FromDateTime(Transaction.TransactionDate);
            }
        }
        catch (Exception ex)
        {
            _errorMessage = $"Error loading data: {ex.Message}";
        }
        finally
        {
            _isLoading = false;
        }
    }

    private async Task HandleValidSubmit()
    {
        if (Transaction == null)
        {
            return;
        }

        _isSubmitting = true;
        _errorMessage = null;

        try
        {
            Transaction.TransactionDate = _transactionDate.ToDateTime(TimeOnly.MinValue);
            
            var result = await TransactionGateway.UpdateTransactionAsync(Id, Transaction);
            if (result != null)
            {
                NavigationManager.NavigateTo("/transactions");
            }
            else
            {
                _errorMessage = "Failed to update transaction. It may have been deleted.";
                _notFound = true;
            }
        }
        catch (Exception ex)
        {
            _errorMessage = $"Error updating transaction: {ex.Message}";
        }
        finally
        {
            _isSubmitting = false;
        }
    }
}

